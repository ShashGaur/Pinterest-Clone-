<% include ./partials/header.ejs%>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
  <div class="cards flex flex-wrap gap-10">
    <% posts.forEach(function(elem){%>
    <a href="/show/post/<%=elem._id%>" class="w-32 card cursor-pointer">
      <div class="w-full h-40 bg-zinc-700 rounded-lg overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%=elem.image%>"
          alt=""
        />
      </div>
      <h5 class="mt-2 text-sm"><%=elem.title%></h5>
      <h6 class="text-xs opacity-400">@<%=elem.user.username%></h6>
    </a>

    <%})%>
  </div>
</div>
<% include ./partials/footer.ejs%>
