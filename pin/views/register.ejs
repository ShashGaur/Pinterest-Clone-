<% include ./partials/header.ejs%>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[25vw] bg-white border-2 rounded-[30px] px-20 py-10 rounded-md">
    <h1
      class="text-3xl text-center font-semibold text-zinc-700 mb-5 tracking-tighter leading-none capitalize"
    >
      Create New Account
    </h1>
    <form action="/register" method="post">
      <input
        type="text"
        placeholder="username"
        name="username"
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
      />
      <input
        type="text"
        placeholder="Full Name"
        name="fullname"
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
      />
      <input
        type="email"
        placeholder="email"
        name="email"
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
      />
      <input
        type="number"
        placeholder="contact"
        name="contact"
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
      />
      <input
        type="password"
        name="password"
        placeholder="password"
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
      />

      <input
        type="submit"
        class="border-2 rounded-full block mt-5 w-full px-3 py-2 bg-red-600 text-white"
        value="Create New Account?"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center"
      >
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge that you've read our Privacy Policy Notice at
        collection
      </p>
      <a
        href="/"
        class="inline-block mt-7 text-sm font-semibold text-zinc-700 w-full text-center"
        >Login Existing Account</a
      >
    </form>
  </div>
</div>
<% include ./partials/footer.ejs%>
