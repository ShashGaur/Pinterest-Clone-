<% include ./partials/header.ejs%>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white"">
  <div
    class="flex flex-col justify-center items-center gap-10 h-50"
  >
    <h2 class="mx-auto mt-15 font-bold text-4xl"> <%=post.title%></h2>
    <div class="w-3/5 h-96">
      <img
        class="w-full h-full  bg-sky-200 rounded-lg "
