<% include ./partials/header.ejs%>
<div
  class="w-full h-screen bg-zinc-300 flex items-center justify-center bg-[url(https://images.unsplash.com/photo-1566305977571-5666677c6e98?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MzV8fGFic3RyYWN0JTIwYmFja2dyb3VuZHxlbnwwfHwwfHx8MA%3D%3D)] bg-cover bg-center"
>
  <div class="w-[25vw] bg-white border-2 rounded-[30px] px-20 py-10 rounded-md">
    <h1
      class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter leading-none capitalize"
    >
      Welcome to pinterest
    </h1>
    <form action="/login" method="post">
      <input
        type="text"
        placeholder="username"
        name="username"
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
      />
      <input
        type="password"
        name="password"
        placeholder="password"
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
      />
      <a href="#" class="mt-2 font-semibold text-zinc-500 inline-block"
        >Forgot Password</a
      >
      <input
        type="submit"
        class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white"
        value="Login"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center"
      >
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge that you've read our Privacy Policy Notice at
        collection
      </p>
      <a
        href="/register"
        class="inline-block mt-7 text-sm font-semibold text-zinc-700 w-full text-center"
        >Don't have an account?</a
      >
    </form>
  </div>
</div>
<% include ./partials/footer.ejs%>
